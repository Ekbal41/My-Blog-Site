{% extends "blog/blog-layout.njk" %}
{% block title %}
  {{blog.title | title}}
{% endblock %}
{% block content %}
  <div class="mb-3 d-flex justify-content-end gap-2">
    {% for tag in tags %}
      <span class="badge bg-light fw-normal text-dark card">
        {{tag}}
      </span>
    {% endfor %}

  </div>
  <zero-md >
    <script type="text/markdown">
      {{fileContent | safe}}
    </script>
  </zero-md>
  <div class="d-flex justify-content-between align-items-center mt-5 gap-4">

    {% if blog.previousTitle %}
      <div class="card p-4 w-50 bg-light">
        <a class="text-decoration-none text-dark text-capitalize fw-semibold" href="/blog/{{blog.previousSlug}}">
        ✏️ {{blog.previousTitle}}
        </a>
      </div>
    {% else %}
      <div></div>
    {% endif %}

    {% if blog.nextTitle %}
      <div class="card p-4 w-50  bg-light ">
        <a class="text-decoration-none text-dark text-capitalize fw-semibold" href="/blog/{{blog.nextSlug}}">
         ✏️ {{blog.nextTitle}}
        </a>
      </div>
    {% else %}
      <div></div>
    {% endif %}
  </div>
{% endblock %}