{% extends "blog/blog-post-layout.njk" %}
{% block title %}
  All Posts
{% endblock %}
{% block content %}
    {% for blogPostMeta in blogPostMetas %}
        <div class="mb-4">
            <a class="text-dark fs-5 fw-semibold link" href="/blog/{{blogPostMeta.slug}}">
                {{blogPostMeta.title | title}}
            </a>
            <p class="fw-light fs-18 mt-2">
                {{blogPostMeta.description}}
            </p>
        </div>
    {% endfor %}

</div>
{% endblock %}